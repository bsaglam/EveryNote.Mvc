@using EveryNote.Entities
@model Users
@{
    ViewBag.Title = "ShowProfile";
}

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <img src=@Model.ImageFilePath />
        </div>
        <div class="col-md-4">
            <div class="row">
                <div class="col-md-4">@Html.LabelFor(x => x.UserName)</div>
                <div class="col-md-8">@Html.DisplayFor(x => x.UserName)</div>
            </div>
            <div class="row">
                <div class="col-md-4">@Html.LabelFor(x => x.EMail)</div>
                <div class="col-md-8"> @Html.DisplayFor(x => x.EMail)</div>
            </div>
            <div class="row">
                <div class="col-md-4">@Html.LabelFor(x => x.Password)</div>
                <div class="col-md-8"> @Html.DisplayFor(x => x.Password)</div>
            </div>
            <div class="row">
                <div class="col-md-4"> @Html.LabelFor(x => x.FirstName)</div>
                <div class="col-md-8"> @Html.DisplayFor(x => x.FirstName)</div>
            </div>
            <div class="row">
                <div class="col-md-4">@Html.LabelFor(x => x.LastName)</div>
                <div class="col-md-8">@Html.DisplayFor(x => x.LastName)</div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="dropdown">
                <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Dropdown link
                </a>

                <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                    <a class="dropdown-item" href="@Url.Action("EditUser")">Güncelle</a>
                    <a class="dropdown-item" href="@Url.Action("DeleteUser")" onclick="return confirm("Hesabınızı silmek istediğinize emin misiniz?");">Sil</a>
                </div>
            </div>
        </div>
    </div>
</div>

